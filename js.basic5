 * 
 */

console.log(100>1);
console.log(100<1);
console.log(100<=1);
console.log(100>=1);

console.log('-------------');

/**
 * 삼항 조건 연산자 (ternary operator)
 */

// 물음표를 기준으로 조건을 걸고 : 을 기준으로 왼쪽은 트루 오른쪽은 펄스
console.log(10 > 0 ? '10이 0보다 크다': '10이 영보다 작다');

console.log('---------------------');

/**
 * 논리 연산자
 * 1) &&
 * 2)||
 * 
 */

// && 조건은 모두 true여야 true를 반환한다. and조건
console.log(true && true); //true
console.log(true && false); //false
console.log(false && false); //false

console.log('---------------------'); 

// || 는 하나만 true 여도 true를 반환한다. or조건
console.log(true || true); //true
console.log(true || false); //true
console.log(false || false); //false

console.log('---------------------'); 

console.log(10 > 1 && 20 > 2); //true
console.log(10 > 1 && 20 < 2); //false
console.log(10 > 1 || 20 > 2); //true
console.log(10 > 1 || 20 < 2); //true


/**
 * 
 * 단축평가 (short circuit evaluation)
 * 
 * &&를 사용했을때 좌측이 true면 우측 값 반환
 * &&를 사용했을때 좌측이 false면 좌측 값 반환
 * ||를 사용했을때 좌측이 true면 좌측 값 반환
 * ||를 사용했을때 좌측이 false면 우측 값 반환
 * 
 */

console.log('---------------------'); 

console.log(true || '가을'); // true 출력 (좌측 값 반환)
console.log(false || '가을'); // 가을 출력 (우측 값 반환)
console.log(false && '가을'); // false 출력 (좌측 값 반환)
console.log(true && '가을'); // 가을 출력 (우측 값 반환)

console.log(true && true && '가을'); // 가을 출력
console.log(true && false && '가을'); // false 출력 그냥 좌측값 false 출력


/**
 * 
 * 지수 연산자
 */

console.log(2**2);
console.log(10**3);


/**
 * null 연산자
 * 
 */

let name; // undefined
console.log(name);

name = name ?? '가을'; 
// ??는 좌측값이 null이거나 undefined일때 우측값을 반환해라!! 이런 뜻

console.log(name); // 가을 출력

name = name ?? '이가을';
console.log(name); // 가을 출력
// 여기서는 name값이 null이 아니라 이전 가을이 들어갔기 때문에 가을 그대로 출력


let name2;
name2 ??= '가을';
console.log(name2);
