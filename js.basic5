/**
 * 
 * 증가와 감소
 * 
 * 
 */

let number = 1;

number ++;
console.log(number);

number --;
console.log(number);

console.log('------------');


/**
 * 연산자의 위치
 * 
 */

let result = 1;
console.log(result);

result = number ++; // 대입 후 증가
console.log(result,number);

result = number --;
console.log(result,number);

result = ++ number; // 먼저 증가
console.log(result,number);

result = -- number;
console.log(result,number);

console.log('------------------');

/**
 * 숫자 타입이 아닌 타입에 +,- 사용하면 어케 될까
 * 
 * 
 */
let sample = '99';

console.log(+sample);
console.log(typeof +sample); // number

console.log(sample);
console.log(typeof sample); // String

sample = true;
console.log(+sample);
console.log(typeof +sample); // number

sample = false;
console.log(+sample); // 0
console.log(typeof +sample); //number

sample = 'gaeul';
// NaN => 숫자가 아니다
console.log(+sample);

console.log('------------');

