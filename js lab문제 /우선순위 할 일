<body>
    <div class="app-container" style="width: 350px; padding: 20px; background: #fff; border-radius: 15px; box-shadow: 0 10px 20px rgba(0,0,0,0.1);">
    <h2>ğŸ¯ ìš°ì„ ìˆœìœ„ í•  ì¼</h2>
    <div class="input-group" style="display: flex; gap: 5px; margin-bottom: 20px;">
        <input type="text" id="todoInput" placeholder="í•  ì¼ì„ ì…ë ¥í•˜ì„¸ìš”" style="flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 8px;">
        <button id="addBtn" style="padding: 10px; background: #00b894; color: white; border: none; border-radius: 8px; cursor: pointer;">ì¶”ê°€</button>
    </div>

    <ul id="todoList" style="list-style: none; padding: 0;"></ul>
    <script>
const todoApp = {
    todos: [],

    init() {
        document.getElementById('addBtn').onclick = () => this.addTodo();
        this.render();
    },

    addTodo() {
        const input = document.getElementById('todoInput');
        if (input.value.trim() !== "") {
            this.todos.push({
                id: Date.now(),
                text: input.value,
                priority: 1 // 1: ë³´í†µ, 2: ì¤‘ìš”, 3: ë§¤ìš°ì¤‘ìš”
            });
            input.value = "";
            this.render();
        }
    },

    // ë³„ í´ë¦­ ì‹œ ìš°ì„ ìˆœìœ„ ë³€ê²½ ë¡œì§ (1 -> 2 -> 3 -> 1)
    changePriority(id) {
        this.todos = this.todos.map(todo => {
            if (todo.id === id) {
                let nextP = todo.priority + 1;
                // ì—¬ê¸°ì„œ else ifì˜ ëŠë‚Œì„ ì‚´ì§ ë§›ë³¼ ìˆ˜ ìˆì£ !
                if (nextP > 3) nextP = 1; 
                return { ...todo, priority: nextP };
            }
            return todo;
        });
        this.render();
    },

    render() {
        const listEl = document.getElementById('todoList');
        listEl.innerHTML = "";

        this.todos.forEach(todo => {
            const li = document.createElement('li');
            li.style.padding = "15px";
            li.style.marginBottom = "10px";
            li.style.borderRadius = "10px";
            li.style.cursor = "pointer";
            li.style.display = "flex";
            li.style.justifyContent = "space-between";

            // --- [ì—¬ê¸°ì„œë¶€í„° ì ì¬ì ì†Œ else if ë¯¸ì…˜!] ---
            // íŒíŠ¸: todo.priority ìˆ«ìì— ë”°ë¼ liì˜ ë°°ê²½ìƒ‰(backgroundColor)ì„ ë°”ê¿”ë³´ì„¸ìš”.
            if (todo.priority === 3) {
                li.style.backgroundColor = "#ff7675"; // ë§¤ìš° ì¤‘ìš” (ë¹¨ê°•)
                li.innerHTML = `<span>ğŸ”¥ ${todo.text}</span>`;
            } 
            else if (todo.priority === 2) {
                li.style.backgroundColor = "#ffeaa7"; // ì¤‘ìš” (ë…¸ë‘)
                li.innerHTML = `<span>â­ï¸ ${todo.text}</span>`;
            } 
            else {
                li.style.backgroundColor = "#f1f2f6"; // ë³´í†µ (íšŒìƒ‰)
                li.innerHTML = `<span>ğŸ“Œ ${todo.text}</span>`;
            }

            // í´ë¦­í•˜ë©´ ìš°ì„ ìˆœìœ„ ë³€ê²½
            li.onclick = () => this.changePriority(todo.id);

            listEl.appendChild(li);
        });
    }
};

todoApp.init();
    </script>
</div>
