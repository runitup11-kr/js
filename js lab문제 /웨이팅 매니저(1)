    <script>
        const waitingApp = {
            guests: [],

            init(){
                document.getElementById('addBtn').addEventListener('click',() => this.addGuest());
                document.getElementById('guestInput').addEventListener('keypress', (e) =>{
                    if(e.key === "Enter") this.addGuest();
                })
            },

            addGuest(){
                const inputEl = document.getElementById("guestInput");
                const name = inputEl.value;
                if(name.trim() !== ""){
                    this.guests.push({id: Date.now(),name: name});
                }
                inputEl.value ="";
                this.render(); 

            },

            render(){
                const licon = document.getElementById("waitingList");
                licon.innerHTML = "";

                this.guests.forEach(guests => {
                   const guestsli  = document.createElement("li");
                    guestsli.textContent = guests.name;
                    const btn = document.createElement('button');
                    btn.textContent = "ì…ì¥";

                    btn.onclick = () =>{
                        this.guests = this.guests.filter(g => g.id !== guests.id);
                        this.render();
                    }
                    guestsli.appendChild(btn);

                    licon.appendChild(guestsli);
                });
                document.getElementById('totalCount').textContent = this.guests.length;
            }
        }
        waitingApp.init();

    </script>
