<body>
    <div class="app-container">
        <h1>ğŸ“š My ë‹¨ì–´ì¥</h1>
        <div class="input-group">
            <input type="text" id="wordInput" placeholder="ë‹¨ì–´ (ì˜ˆ: Apple)">
            <input type="text" id="meaningInput" placeholder="ëœ» (ì˜ˆ: ì‚¬ê³¼)">
            <button id="addBtn">ë‹¨ì–´ ì¶”ê°€í•˜ê¸°</button>
        </div>
        <ul id="wordList"></ul>
    </div>

    <script>
        const wordApp = {
            words: localStorage.getItem('myWords') ? JSON.parse(localStorage.getItem('myWords')): [],
        
        init(){
            document.getElementById('addBtn').addEventListener('click',() => {this.addWord()});
            document.getElementById('wordInput').addEventListener('keypress', (e) =>{
                if(e.key === "Enter") this.addWord();
            });
            this.render();
        },

        addWord(){
            const wInput = document.getElementById('wordInput');
            const mInput = document.getElementById('meaningInput');

            const wordText = wInput.value;
            const meaningText = mInput.value;

            if(wInput.value.trim() !=="" && mInput.value.trim() !==""){
                this.words.push({
                    id: Date.now(),
                    word: wordText,
                    meaning: meaningText,
                });

                wInput.value = "";
                mInput.value = "";

                this.render();
                this.save();

                }
            },
            render(){
                const WordLi = document.getElementById('wordList');
                WordLi.innerHTML = "";

                this.words.forEach(word =>{
                    const wordsli = document.createElement('li');
                    wordsli.className = 'card';
                
                    wordsli.innerHTML = `
                    <span>${word.word}</span>
                    <div class="meaning">${word.meaning}</div>
                    <button class="delete-btn">x</button>
                    `;

                    wordsli.querySelector('.delete-btn').onclick = (e) =>{
                        e.stopPropagation();
                        this.words = this.words.filter(w => w.id !== word.id);
                        this.save();
                        this.render();
                    }
                    wordsli.onclick = () =>{
                        wordsli.classList.toggle('show');
                    }
                    WordLi.appendChild(wordsli);
                });
                

            },

            save(){
                localStorage.setItem('myWords',JSON.stringify(this.words));

            }
            
        }


    wordApp.init();

    </script>
</body>
</html>
